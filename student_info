#include<iostream>
using namespace std;
class student
{
	private:
		int reg_no,i,n;
		char name[20];
		int marks[5];
		float a;
	public:
		void get();
		float avg(int marks[]);
}s;
void student::get(){
	cout<<"STUDENT INFORMATION SYSTEM:"<<endl;
	cout<<"Enter no of students:"<<endl;
	cin>>n;
	for(i=0;i<n;i++)
	{
		cout<<"Enter Register number:";
		cin>>s.reg_no;
		cout<<"Enter Name:";
		cin>>s.name;
	}
	for(i=0;i<5;i++)
	{
		cout<<"Enter 5 subject marks:"<<endl;
		cin>>s.marks[5];
	}
	avg(int marks);
}
float student::avg(int marks[]){
	int a;
	for(i=0;i<5;i++)
	{
		a+=marks[i];
	}
	return (a/5.0);
}
int main()
{
	student s;
	s.get();
	s.avg;
	return 0;
}
